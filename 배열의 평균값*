using System;
using System.Linq;

public class Solution {
    public double solution(int[] numbers) {
        if (numbers == null || numbers.Length == 0) {
            return 0.0;
        }

        double sum = 0;
        foreach (int number in numbers) {
            sum += number;
        }

        double average = sum / numbers.Length;
        return average;
    }
}
